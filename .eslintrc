{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": [
    "standard",
    "standard-jsx"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "object-curly-spacing": ["error", "never"],
    "react/sort-comp": [
      "error",
      {
        "order": [
          "static-methods",
          "static-react",
          "everything-else",
          "/^on.+$/",
          "lifecycle",
          "rendering"
        ],
        "groups": {
          "static-react": [
            "displayName",
            "propTypes",
            "defaultProps",
            "contextTypes",
            "childContextTypes",
            "getChildContext",
            "state",
            "constructor"
          ],
          "lifecycle": [
            "componentWillMount",
            "componentDidMount",
            "componentWillReceiveProps",
            "shouldComponentUpdate",
            "componentWillUpdate",
            "componentDidUpdate",
            "componentWillUnmount"
          ],
          "rendering": [
            "/^render.+$/",
            "render"
          ]
        }
      }
    ],
    "react/prop-types": ["error"],
    "react/no-unused-prop-types": ["error"]
  }
}